    <h1>Sign Off Pizza</h1>
    <br>
    <h1>Admin Page</h1>
  
    <h2>Statistics </h2>
    <table class="table">
          <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Users</th>
            <th>Followers</th>
          </tr>
          <% @allUsers.each do |user| %>
            <tr>
                <td><%= user[0] %></td>
                <!-- Format the date display of statistics -->
                <td><%= user[1] %> - 
                    <% if user[2] < 10 %>0<%= user[2] %>
                    <% else %>
                   <%= user[2] %> 
                    <%end %>- <%= user[3] %></td>
                <td><%= user[4] %></td>
                <td><%= user[5] %></td>
            </tr>
          <% end %>
    </table>
    <br>
    
    
    <div id='forms'>
        <!-- The Statistics Graph -->
        <div >
            <form>
                <img src="<%= @chart %>" alt="Graph">
            </form>
        
        </div>
        
          <!-- Updating the page according to requirement -->
        <div>
            <form method="get" action="/Admin">
                <input type="hidden" name="statsid" value="1">
                <input class='form-control' type='submit' value='Today'>
            </form>
        </div>
        
        <div>
            <form method="get" action="/Admin">
                <input type="hidden" name="statsid" value="2">
                <input class='form-control' type='submit' value='This Month'>
            </form> 
        </div>
        
        <div>   
            <form method="get" action="/Admin">
                <input type="hidden" name="statsid" value="3">             
                <input class='form-control' type='submit' value='This Year'>
            </form>    
        </div>
        
    <div>
        <form method="get" action="/Admin">
            <input type="hidden" name="statsid" value="0">              
            <input class='form-control' type='submit' value='All Time'>

        </form>
    </div>
    </div>
